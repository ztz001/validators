{
  "name": "validator-util",
  "version": "0.0.2",
  "description": "字符校验工具库",
  "main": "index.js",
  "module": "es/index.js",
  "browser": "validator-util.min.js",
  "types": "typing/index.d.ts",
  "typings": "typing/index.d.ts",
  "files": [
    "es",
    "lib",
    "typing",
    "index.js",
    "validator-util.js",
    "validator-util.min.js",
    "README.md"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "jest && npm run lint && npm run clean && npm run build:typing && npm run build:es && npm run build:node && npm run build:web && npm run build:web-terser",
    "build:es": "tsc --project ./tsconfig.es.json",
    "build:node": "tsc --project ./tsconfig.node.json",
    "build:typing": "tsc --project ./tsconfig.typing.json",
    "build:web": "rollup --config rollup.config.web.js",
    "build:web-terser": "rollup --config rollup.config.web.terser.js",
    "clean": "shx rm -rf typing && shx rm -rf es && shx rm -rf lib && shx rm -rf index.js && shx rm -rf validator-util.js && shx rm -rf validator-util.min.js",
    "lint": "eslint src/*.ts",
    "cwt": "concurrently -r -p '' -k 'npm run watch' 'npm run watch:test'",
    "test": "npm run pre-test && jest",
    "pre-test": "npm run clean && npm run build:es",
    "watch": "tsc -w",
    "watch:test": "jest -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ztz2/validator-util.git"
  },
  "keywords": [
    "validator",
    "validator-util",
    "validation",
    "validate",
    "assert"
  ],
  "author": {
    "name": "ztz2",
    "email": "448941273@qq.com",
    "url": "https://github.com/ztz2"
  },
  "bugs": {
    "url": "https://github.com/ztz2/validator-util/issues"
  },
  "homepage": "https://github.com/ztz2/validator-util#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/runtime": "^7.13.10",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@types/jest": "29.2.4",
    "@types/node": "^10.12.10",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-jest": "^29.4.3",
    "concurrently": "^8.0.1",
    "eslint": "^7.32.0",
    "jest": "^29.4.3",
    "lint-staged": "^10",
    "rollup": "^3.21.0",
    "shx": "^0.3.4",
    "ts-jest": "29.0.3",
    "tsify": "^5.0.4",
    "tslib": "^2.5.0",
    "typescript": "^4.4.4"
  },
  "license": "MIT"
}
